<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.AddFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/back_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="-1dp"
                    android:text="Edit your Credentials"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/save"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="7dp"
                    android:layout_toStartOf="@+id/btn_edit"
                    android:src="@drawable/delete"
                    android:visibility="visible" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/account_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo_light_mode"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="Select the Account"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu_account"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@android:color/darker_gray"
                app:boxBackgroundColor="#F5F8FA">

                <AutoCompleteTextView
                    android:id="@+id/edit_acc_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:inputType="none"
                    android:paddingStart="16dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/remainingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <!--            Email-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Email ID"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="*"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/red"
                        android:textSize="16sp" />


                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxBackgroundColor="#F5F8FA"
                    app:layout_constraintEnd_toEndOf="@+id/headerLayout"
                    app:layout_constraintHorizontal_bias="0.0">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/dm_sans"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--            UserName-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="UserName"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/username_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxBackgroundColor="#F5F8FA"
                    app:layout_constraintEnd_toEndOf="@+id/email_box"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/email_box"
                    app:layout_constraintTop_toBottomOf="@+id/email_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/dm_sans"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--            Password-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="*"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/red"
                        android:textSize="16sp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxBackgroundColor="#F5F8FA"
                    app:endIconMode="password_toggle"
                    app:layout_constraintEnd_toEndOf="@+id/email_box"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/email_box"
                    app:layout_constraintTop_toBottomOf="@+id/email_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/dm_sans"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--            Category-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Category"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>


                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/edit_categoryChipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWork"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:checkable="true"
                            android:checked="true"
                            android:gravity="center"
                            android:text="Work"
                            android:textColor="@color/white"
                            app:checkedIconEnabled="false"
                            app:chipBackgroundColor="@color/catergory_icon"
                            app:chipCornerRadius="10dp"
                            app:chipIcon="@drawable/work"
                            app:chipIconEnabled="true"
                            app:iconStartPadding="5dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSocial"
                            android:layout_width="95dp"
                            android:layout_height="60dp"
                            android:checkable="true"
                            android:gravity="center"
                            android:text="Social"
                            android:textColor="@color/white"
                            app:checkedIconEnabled="false"
                            app:chipBackgroundColor="@color/catergory_icon"
                            app:chipCornerRadius="10dp"
                            app:chipIcon="@drawable/social"
                            app:chipIconEnabled="true"
                            app:iconStartPadding="5dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMail"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:checkable="true"
                            android:gravity="center"
                            android:text="Mail"
                            android:textColor="@color/white"
                            app:checkedIconEnabled="false"
                            app:chipBackgroundColor="@color/catergory_icon"
                            app:chipCornerRadius="10dp"
                            app:chipIcon="@drawable/mail"
                            app:chipIconEnabled="true"
                            app:iconStartPadding="5dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOther"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:checkable="true"
                            android:gravity="center"
                            android:text="Other"
                            android:textColor="@color/white"
                            app:checkedIconEnabled="false"
                            app:chipBackgroundColor="@color/catergory_icon"
                            app:chipCornerRadius="10dp"
                            app:chipIcon="@drawable/others"
                            app:chipIconEnabled="true"
                            app:iconStartPadding="5dp" />


                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>