<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.AddFragment">



    <androidx.cardview.widget.CardView
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2F3061"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_button"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/save"
            android:layout_marginTop="15dp"
            android:layout_marginStart="350dp"
            app:tint="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:text="Please select the account?"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu_account"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                android:textColorHint="@android:color/darker_gray"
                app:boxBackgroundColor="#F5F8FA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/acc_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/dm_sans"
                android:inputType="none"
                android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/AccountInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainlay"
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAccountDetails"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Account Information"
                android:fontFamily="@font/dm_sans"
                android:textColor="#262B33"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivAccountDetails"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_box"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="16dp"
        android:textColorHint="@android:color/darker_gray"
        app:boxBackgroundColor="#F5F8FA"
        app:layout_constraintEnd_toEndOf="@+id/headerLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/headerLayout"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/dm_sans"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:hint="Email"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_box"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@android:color/darker_gray"
        app:boxBackgroundColor="#F5F8FA"
        app:layout_constraintEnd_toEndOf="@+id/email_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_box"
        app:layout_constraintTop_toBottomOf="@+id/email_box">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/dm_sans"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:hint="Username"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_box"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@android:color/darker_gray"
        app:boxBackgroundColor="#F5F8FA"
        android:layout_marginEnd="20dp"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="@+id/username_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_box"
        app:layout_constraintTop_toBottomOf="@+id/username_box">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/dm_sans"
            android:lines="1"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/dm_sans"
        android:text="Category"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/password_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_box"
        app:layout_constraintTop_toBottomOf="@+id/password_box" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWork"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:checkable="true"
                android:checked="true"
                android:text="Work"
                android:textColor="@color/white"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/catergory_icon"
                app:chipCornerRadius="10dp"
                android:gravity="center"
                app:chipIcon="@drawable/work"
                app:iconStartPadding="5dp"
                app:chipIconEnabled="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSocial"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:checkable="true"
                android:text="Social"
                android:textColor="@color/white"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/catergory_icon"
                app:chipIcon="@drawable/social"
                app:chipCornerRadius="10dp"
                android:gravity="center"
                app:iconStartPadding="5dp"
                app:chipIconEnabled="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMail"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:checkable="true"
                android:text="Mail"
                android:textColor="@color/white"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/catergory_icon"
                app:chipIcon="@drawable/mail"
                app:chipCornerRadius="10dp"
                android:gravity="center"
                app:iconStartPadding="5dp"
                app:chipIconEnabled="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOther"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:checkable="true"
                android:text="Other"
                android:textColor="@color/white"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/catergory_icon"
                app:chipIcon="@drawable/others"
                app:chipCornerRadius="10dp"
                android:gravity="center"
                app:iconStartPadding="5dp"
                app:chipIconEnabled="true" />


        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

